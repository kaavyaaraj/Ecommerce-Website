<%- include("../../partials/header.ejs") %>


    <body style="background-image: url('https://images.pexels.com/photos/3683056/pexels-photo-3683056.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500');">
<div class="container">
    <form action="/buy/<%=prod._id%>" method="POST">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                    <li class="list-group-item">
                        <div class="thumbnail">
                            <img src="<%=prod.imagePath%>" style="height: 200px;">
                        </div>
                        
                        <h3><strong><%=prod.title%></strong></h3>
                        <h4><%=prod.description%></h4>
                        <span class="label label-success">Rs.<%=prod.price%></span>
                        <h4><%=prod.note%></h4>
                    </li>
                <hr>
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                        <button class="btn btn-success" type="submit">Buy</button>
                    </div>
                </div>
            </ul>
        </div>
    </div>
    </form>
    
</div>
</body>